      <choiceInteraction class="choiceleft" responseIdentifier="r_for_fun_intermediate_3" shuffle="false" maxChoices="20">
        <prompt/>
        <simpleChoice identifier="for_fun_3_pump_gas">
          Pump gas with weaker arm
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_play_cards">
          Play cards holding cards in stronger hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_walk_dog">
          Walk dog/pet holding leash in weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_water_plants">
          Water plants with weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_make_sandwich">
          Make a sandwhich with two hands
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_play_ball">
          Play ball with dog/child, throwing with weaker hand
        </simpleChoice>
      </choiceInteraction>
      <choiceInteraction class="choiceleft" responseIdentifier="r_for_fun_intermediate_2" shuffle="false" maxChoices="20">
        <prompt/>
        <simpleChoice identifier="for_fun_2_push_cart">
          Shop and push grocery cart with both hands 
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_play_cards">
          Play cards holding them in weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_hold_purse">
          Hold purse or bag in weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_sweep_mop">
          Sweep or mop using both hands
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_use_tools">
          Use tools with both hands ( weaker hand as stabilizer)
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_garden_hands">
          Garden using both hands (weaker hand as stabilizer)
        </simpleChoice>
      </choiceInteraction>
      <choiceInteraction class="choiceleft" responseIdentifier="r_for_fun_intermediate_1" shuffle="false" maxChoices="20">
        <prompt/>
        <simpleChoice identifier="for_fun_1_swing_arm">
          Walk while swinging weaker arm
        </simpleChoice>
        <simpleChoice identifier="for_fun_1_push_door">
          Push door open with two hands
        </simpleChoice>
        <simpleChoice identifier="for_fun_1_open_fridge">

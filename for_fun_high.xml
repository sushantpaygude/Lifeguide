<?xml version="1.0" encoding="UTF-8"?>
<assessmentItem
  xmlns="http://www.imsglobal.org/xsd/imsqti_v2p1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqti_v2p1 imsqti_v2p1.xsd"
  identifier="for_fun_high"
  title="For fun"
  adaptive="false"
  timeDependent="false">
  <responseDeclaration identifier="r_for_fun_high_3" cardinality="multiple" baseType="identifier"/>
  <responseDeclaration identifier="r_for_fun_high_2" cardinality="multiple" baseType="identifier"/>
  <outcomeDeclaration identifier="for_fun_high_3" cardinality="multiple" baseType="string"/>
  <outcomeDeclaration identifier="for_fun_high_2" cardinality="multiple" baseType="string"/>
  <stylesheet href="lifecit_logo_mustard.css" type="text/css"/>
  <stylesheet href="for_fun_high-out.css" type="text/css"/>
  <itemBody class="nobuttons">
    <div id="container-body">
      <div>
        <img id="image-9_lifecit_logo_mustard" src="background4.png" alt="change me"/>
      </div>
      <div>
        <img id="image-8_lifecit_logo_mustard" src="lifecit_text_transparent.png" alt="change me"/>
      </div>
      <div>
        <img id="image-5_lifecit_logo_mustard" src="mitt.png" alt="change me"/>
      </div>
      <div>
        <img id="image-10_lifecit_logo_mustard" src="background4.png" alt="White background"/>
      </div>
      <div>
        <img id="image-11_lifecit_logo_mustard" src="mustard_rectangle.jpg" alt="Orange rectangle"/>
      </div>
      <div>
        <img id="image-13_lifecit_logo_mustard" src="mitt_small.png" alt="Mitt"/>
      </div>
      <div id="textbox-1_lifecit_logo_mustard" class="includeBorderAndPadding">
        <span class="textbox-1-style1_lifecit_logo_mustard">
          STRONG
        </span>
        <br/>
      </div>
      &#160;
      <div id="textbox-15" class="includeBorderAndPadding">
        &#160;
      </div>
      <div id="textbox-16" class="includeBorderAndPadding">
        &#160;
      </div>
      <div id="button-2" class="back">
        Back
      </div>
      <div id="button-4" class="submit-jumpto-button" label="enter_other_activities">
        Next
      </div>
      <div id="textbox-12" class="includeBorderAndPadding">
        <div class="textbox-12-style1">
          <span class="textbox-12-style2">
            Level 3
            <br/>
          </span>
        </div>
      </div>
      <div id="textbox-13" class="includeBorderAndPadding">
        <div class="textbox-13-style1">
          <span class="textbox-13-style2">
            Level 4
            <br/>
          </span>
        </div>
      </div>
      <choiceInteraction class="choiceleft" responseIdentifier="r_for_fun_high_3" shuffle="false" maxChoices="20">
        <prompt/>
        <simpleChoice identifier="for_fun_3_do_a_jigsaw_puzzle_small_pieces">
          Do a jigsaw puzzle (small pieces) with weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_play_checkers">
          Play checkers or board game using weaker hand to move pieces
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_crosswords">
          Play Crosswords writing with weaker hand if dominant
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_throw_and_catch_a_ball">
          Throw and catch a ball with weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_3_write_letter">
          Write letter with weaker hand if dominant
        </simpleChoice>
      </choiceInteraction>
      <choiceInteraction class="choiceleft" responseIdentifier="r_for_fun_high_2" shuffle="false" maxChoices="20">
        <prompt/>
        <simpleChoice identifier="for_fun_2_pump_gas">
          Pump gas with weaker arm
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_play_cards">
          Play cards holding cards in stronger hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_walk_dog">
          Walk dog/pet holding leash in weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_water_plants">
          Water plants with weaker hand
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_make_sandwich">
          Make a sandwich with two hands
        </simpleChoice>
        <simpleChoice identifier="for_fun_2_play_ball">
          Play ball with dog/child throwing with weaker hand
        </simpleChoice>
      </choiceInteraction>
      <div id="textbox-5" class="includeBorderAndPadding">
        <span class="textbox-5-style1">
          For fun
        </span>
        <br/>
      </div>
    </div>
  </itemBody>
  <responseProcessing>
    <setOutcomeValue identifier="for_fun_high_3">
      <customOperator class="uk.ac.soton.ecs.lifeguide.customexpressions.ConvertToString">
        <variable identifier="r_for_fun_high_3"/>
      </customOperator>
    </setOutcomeValue>
    <setOutcomeValue identifier="for_fun_high_2">
      <customOperator class="uk.ac.soton.ecs.lifeguide.customexpressions.ConvertToString">
        <variable identifier="r_for_fun_high_2"/>
      </customOperator>
    </setOutcomeValue>
  </responseProcessing>
</assessmentItem>